<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".SoupDish"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background">

    <ImageButton
        android:layout_height="71dp"
        android:layout_width="57dp"
        app:srcCompat="@drawable/left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#00ff0000"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:id="@+id/backbutton"/>


    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="393dp"
        android:layout_height="386dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/con3" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox13"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="된장국 76kcal" />

                <CheckBox
                    android:id="@+id/checkBox14"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="김치찌개 456kcal" />

                <CheckBox
                    android:id="@+id/checkBox15"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="콩나물국 40kcal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con4" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con5" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/con6" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="미역국 92kcal" />

                <CheckBox
                    android:id="@+id/checkBox17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매운탕 213kcal" />

                <CheckBox
                    android:id="@+id/checkBox18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="소고기무국 192kcal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con7" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con8" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/con9" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="만두국 480kcal" />

                <CheckBox
                    android:id="@+id/checkBox20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="계란국 272kcal" />

                <CheckBox
                    android:id="@+id/checkBox21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="토란국 72kcal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con10" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con11" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/con12" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="감자탕 429kcal" />

                <CheckBox
                    android:id="@+id/checkBox23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="떡국 325kcal" />

                <CheckBox
                    android:id="@+id/checkBox24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="순두부찌개 253kcal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con13" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginRight="58dp"
                    app:srcCompat="@drawable/con14" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/con15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="부대찌개 712kcal" />

                <CheckBox
                    android:id="@+id/checkBox26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="북엇국 240kcal" />

                <CheckBox
                    android:id="@+id/checkBox27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="곰탕 179kcal" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="167dp"
        android:layout_height="44dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="222dp"
        android:text="체중관리 식단표"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toStartOf="@+id/ScrollView"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toEndOf="@+id/backbutton"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="체중관리 식단표" />

    <TextView
        android:id="@+id/kcal"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="27dp"
        android:text="칼로리 : "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/caltext2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/caltext2"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="27dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kcal"
        app:layout_constraintTop_toBottomOf="@+id/ScrollView"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>